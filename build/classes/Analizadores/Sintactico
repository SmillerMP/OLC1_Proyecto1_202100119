start with ini; 

ini::= codigo;

codigo::=
    codigo comentarios
    | codigo PR_PROGRAM instrucciones PR_END PR_PROGRAM 
    | PR_PROGRAM instrucciones PR_END PR_PROGRAM
    | comentarios
;

instrucciones::=
    instruccion instrucciones
    | instruccion
    | error instrucciones
;

instruccion::= 
    PR_VAR DOSPUNTOS tiposVariables DOSPUNTOS DOSPUNTOS ID:clave MENOR_QUE MENOS valores:valor PR_END PTCOMA   {:variablesDeclaradas.put(clave, valor);System.out.println(clave);:}
    | PR_ARR DOSPUNTOS tiposVariables DOSPUNTOS DOSPUNTOS ARROBA ID MENOR_QUE MENOS COR_IZQ valoresArreglo:val COR_DER PR_END PTCOMA {:System.out.println(val);:}
    | PR_CONSOLE DOSPUNTOS DOSPUNTOS PR_PRINT IGUAL valoresArreglo PR_END PTCOMA
    | PR_CONSOLE DOSPUNTOS DOSPUNTOS PR_COLUMN IGUAL valores MENOS MAYOR_QUE COR_IZQ valoresArreglo COR_DER PR_END PTCOMA
    | PR_CONSOLE DOSPUNTOS DOSPUNTOS PR_COLUMN IGUAL valores MENOS MAYOR_QUE valoresArreglo  PR_END PTCOMA
    | GraficaLineas
    | GraficaBarras
    | GraficaPie
    | GraficaHistograma
    | comentarios
;   

valores::=
     DOUBLE:val                         {: RESULT=val; System.out.println(val);:}
    | ID:val                            {: RESULT=variablesDeclaradas.get(val); System.out.println(val);:}
    | STRING:val                        {: RESULT=val; //System.out.println(val);:}
    | operaciones:val                   {: RESULT=val; System.out.println(val);:}
    | funcionesEstadisticas:val         
;

tiposVariables::=
    PR_CHAR COR_IZQ COR_DER
    | PR_DOUBLE
;

valoresArreglo::=
    valoresArreglo COMA funcionesEstadisticas       
    |valoresArreglo COMA operaciones                
    | valoresArreglo:rec COMA DOUBLE:val                {:RESULT=rec + ", " + val; System.out.println(rec);:}
    | valoresArreglo:rec COMA STRING:val                {:RESULT=rec + ", " + val; System.out.println(rec);:}
    | valoresArreglo:rec COMA ID:val                    {:RESULT=rec + val; System.out.println(val);:}
    | STRING:val                                        {:RESULT=val; System.out.println(val);:}
    | DOUBLE:val                                        {:RESULT=val; //System.out.println(val);:}
    | ID:val                                            {:RESULT=val; System.out.println(val);:}
    | operaciones:val                                   {:RESULT=val; System.out.println(val);:}
    | ARROBA ID
    | funcionesEstadisticas
;


operaciones::=
    | PR_SUM PAR_IZQ valoresOperaciones:val1 COMA valoresOperaciones:val2 PAR_DER       {:RESULT=Funciones.operaciones(val1.toString(), val2.toString(), "SUM");:}    
    | PR_RES PAR_IZQ valoresOperaciones:val1 COMA valoresOperaciones:val2 PAR_DER       {:RESULT=Funciones.operaciones(val1.toString(), val2.toString(), "RES");:}    
    | PR_MUL PAR_IZQ valoresOperaciones:val1 COMA valoresOperaciones:val2 PAR_DER       {:RESULT=Funciones.operaciones(val1.toString(), val2.toString(), "MUL");:}    
    | PR_DIV PAR_IZQ valoresOperaciones:val1 COMA valoresOperaciones:val2 PAR_DER       {:RESULT=Funciones.operaciones(val1.toString(), val2.toString(), "DIV");:}    
    | PR_MOD PAR_IZQ valoresOperaciones:val1 COMA valoresOperaciones:val2 PAR_DER       {:RESULT=Funciones.operaciones(val1.toString(), val2.toString(), "MOD");:}    
;

valoresOperaciones::=
    operaciones:val                 {:RESULT=val;:} 
    | funcionesEstadisticas
    | DOUBLE:val                    {:RESULT=val;:} 
    | ID:val                        {:RESULT=val;:}        
;


funcionesEstadisticas::=
    PR_MEDIA PAR_IZQ COR_IZQ valoresArreglo COR_DER PAR_DER
    | PR_MEDIANA PAR_IZQ COR_IZQ valoresArreglo COR_DER PAR_DER
    | PR_MODA PAR_IZQ COR_IZQ  valoresArreglo COR_DER PAR_DER
    | PR_VARIANZA PAR_IZQ COR_IZQ valoresArreglo COR_DER PAR_DER
    | PR_MAX PAR_IZQ COR_IZQ valoresArreglo COR_DER PAR_DER
    | PR_MIN PAR_IZQ COR_IZQ valoresArreglo COR_DER PAR_DER
    | PR_MEDIA PAR_IZQ valoresArreglo PAR_DER
    | PR_MEDIANA PAR_IZQ valoresArreglo PAR_DER
    | PR_MODA PAR_IZQ valoresArreglo PAR_DER
    | PR_VARIANZA PAR_IZQ valoresArreglo PAR_DER
    | PR_MAX PAR_IZQ valoresArreglo PAR_DER
    | PR_MIN PAR_IZQ valoresArreglo PAR_DER
;

GraficaLineas::=
    PR_GRAPHLINE PAR_IZQ
    PR_TITULO DOSPUNTOS DOSPUNTOS PR_CHAR COR_IZQ COR_DER IGUAL STRING PR_END PTCOMA
    PR_EJEX DOSPUNTOS DOSPUNTOS PR_CHAR COR_IZQ COR_DER IGUAL COR_IZQ valoresArreglo COR_DER PR_END PTCOMA
    PR_EJEY DOSPUNTOS DOSPUNTOS PR_DOUBLE IGUAL COR_IZQ valoresArreglo COR_DER PR_END PTCOMA
    PR_TITULOX DOSPUNTOS DOSPUNTOS PR_CHAR COR_IZQ COR_DER IGUAL STRING PR_END PTCOMA
